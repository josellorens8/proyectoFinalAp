<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cadena1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/fondo"
            android:backgroundTint="@color/otro"
            android:hint="Ingrese una frase"
            android:textAlignment="center"
            android:textColor="@color/fondo"
            android:textColorHint="@color/fondo"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/cadena2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="40dp"
            android:background="@color/fondo"
            android:backgroundTint="@color/otro"
            android:hint="Ingrese una frase"
            android:textAlignment="center"
            android:textColor="@color/fondo"
            android:textColorHint="@color/fondo"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnComparacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:backgroundTint="@color/caja"
            android:text="Comparar"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@color/caja"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/otro"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>